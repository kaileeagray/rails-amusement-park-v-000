<h1>New Attraction</h1>
<%= form_for @attraction, controller: 'attractions', action: 'edit' do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :height, "Height Requirement (in inches)" %>
    <%= f.number_field :min_height %>
  </div>

  <div class="field">
    <%= f.label :happiness_rating, "How fun is it? (1-5 scale)" %>
    <%= f.number_field(:happiness_rating, in: 1..5) %>
  </div>

  <div class="field">
    <%= f.label :nausea_rating, "How nausea-inducing is it? (1-5 scale)"%>
    <%= f.number_field(:nausea_rating, in: 1..5)%>
  </div>


  <div class="field">
    <%= f.label :tickets, "How many tickets does it cost?" %>
    <%= f.number_field :tickets %>
  </div>

  <%= f.submit "Update Attraction" %>
<% end %>
