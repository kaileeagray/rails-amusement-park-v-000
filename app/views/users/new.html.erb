<h1>New User</h1>
<%= form_for @user, controller: 'users', action: 'create' do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :height, "Height (inches)" %>
    <%= f.number_field :height %>
  </div>

  <div class="field">
    <%= f.label :happiness, "How happy are you? (1-5 scale)" %>
    <%= f.number_field(:happiness, in: 1..5) %>
  </div>

  <div class="field">
    <%= f.label :nausea, "How nauseous are you? (1-5 scale)"%>
    <%= f.number_field(:nausea, in: 1..5)%>
  </div>


  <div class="field">
    <%= f.label :tickets, "How many dollars are in your pocket?" %>
    <%= f.number_field :tickets %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    Check box if you are a theme park owner <%= f.check_box :admin %>
  </div>
  <%= f.submit "Create User" %>
<% end %>

<%=link_to "Back", root_path%>
